{
	"name": "shout",
	"description": "Let people send push notifications to a group of people.",
	"url": "localhost:8000",
	"license": "MIT",
	"author": {
		"name": "Jannis R",
		"email": "mail@jannisr.de",
		"url": "http://jannisr.de"
	},
	"homepage": "https://github.com/derhuerst/shout",
	"repository": "git://github.com/derhuerst/shout.git",
	"bugs": "https://github.com/derhuerst/shout/issues",
	"version": "0.1.0",
	"main": "./src/index.js",
	"bin": {
		"shout":	"./bin/shout"
	},
	"preferGlobal": true,
	"keywords": [
		"service",
		"push",
		"notification",
		"realtime",
		"groups",
		"subscribe",
		"app",
		"webapp",
		"service",
		"coffeescript",
		"javascript"
	],
	"dependencies": {
		"coffee-script":			"^1.10.0",
		"minimist":					"^1.2.0",
		"hapi":						"^10.3.0",
		"inert":					"^3.0.2",
		"async":					"^1.4.2",
		"shout-orm":				"derhuerst/shout-orm#master",
		"short-hash":				"^1.0.0",
		"uuid":						"^2.0.1",
		"moment":					"^2.10.6",
		"shortid":					"^2.2.2"
	},
	"irectories": {
		"bin":		"./bin",
		"src":		"./src",
		"lib":		"./src"
	},
	"scripts": {
		"setup":	"./self-signed-certificate.zsh",
		"server":	"coffee ./bin/shout -c server.crt -k server.key",
		"start":	"forever start -c coffee ./bin/shout -c server.crt -k server.key",
		"stop":		"forever stop ./bin/shout"
	}
}
